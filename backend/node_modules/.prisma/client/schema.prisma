datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int         @id @default(autoincrement())
  name         String
  surname      String
  email        String      @unique
  passwordhash String
  birthDate    DateTime
  active       Boolean     @default(true)
  watchlist    Watchlist[]

  @@map("User")
}

model Watchlist {
  id     Int     @id @default(autoincrement())
  userid Int
  title  String
  type   String
  status String
  rating Int?
  notes  String?

  user User @relation(fields: [userid], references: [id], onDelete: Cascade)

  @@index([userid])
  @@map("Watchlist")
}
